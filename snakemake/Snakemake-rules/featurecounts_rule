rule featurecounts:
    input:
        bam = "{prefix}/{sample}/{sample}_Aligned.out.bam"
    output:
        counts = "{prefix}/{sample}/featurecounts/{sample}_counts.txt"
        #summary = "{prefix}/{sample}/featurecounts/{sample}_summary.txt"
    log:
        "{prefix}/logs/{sample}.featurecounts.log"
    params:
        path_gtf = config["general_informations"]["gtf_hhv8"]
    shell:
        """
        featureCounts -a {params.path_gtf} -o {output.counts} {input.bam} 2>&1 | tee {log}
        """